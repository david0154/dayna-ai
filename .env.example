# ===== DAYNA AI CONFIGURATION =====

# Operation Mode: auto, online, offline
MODE=auto

# Optional: Google Gemini API Key (for online mode)
GEMINI_API_KEY=your_gemini_api_key_here

# ===== OFFLINE MODEL PATHS =====
LLM_MODEL=backend/models/mistral-7b-instruct-v0.2.Q4_K_M.gguf
WHISPER_MODEL=base  # Options: tiny, base, small, medium (multilingual)

# TTS Models
HINDI_TTS_MODEL=backend/models/hi_IN-pratham-medium.onnx
ENGLISH_TTS_MODEL=backend/models/en_US-lessac-medium.onnx

# ===== LANGUAGE SETTINGS =====
# Default language: hi (Hindi), en (English), auto (auto-detect)
DEFAULT_LANGUAGE=auto

# ===== PERFORMANCE SETTINGS =====
# Number of CPU threads for LLM
LLM_THREADS=8

# GPU acceleration (number of layers, 0 for CPU only)
GPU_LAYERS=35
